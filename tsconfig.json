{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "LF",
    "listEmittedFiles": true,
    "target": "ES2020",
    "outDir": "lib"
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "lib/**/*.js"
  ]
}
