{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,

        /* Emitting Files */
        "declaration": true,
        "sourceMap": true,
        "outDir": "lib",
        "newLine": "LF"
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
}
